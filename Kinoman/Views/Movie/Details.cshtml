@model Kinoman.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
@if (!String.IsNullOrEmpty(Model.ShortDecription))
{
    <p>@Model.ShortDecription</p>
    <hr />
}
    <ul>
        <li>Genre: @Model.Genre.Name</li>
        <li>Release date: @Model.ReleaseDate</li>
        <li>Date added: @Model.DateAdded</li>
        <li>Number in stock: @Model.NumberInStock</li>
    </ul>